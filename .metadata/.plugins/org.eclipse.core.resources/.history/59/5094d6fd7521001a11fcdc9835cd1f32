package com.string;

public class CountWords {
	
	public static void main(String[] args) {
		
		//String[] arr= {"Anshu","Rahul","Rohit","Rekha"};
		
		String arr= "My Name Is Lakhan";
		
		String rev="";
		
		String[] s=arr.split(" ");
		
		for(String st:s)
		{
			//System.out.println(st);
			
			for(int i=st.length()-1;i>=0;i--)
			{
				
				rev=rev+st.charAt(i);
				
				
			}
			
			System.out.println(rev);
		}
		
	}

}
